{
    "name": "@onyxia-ui/code-editor",
    "version": "0.0.0",
    "description": "Wrapper around codemirror onyxia themed",
    "repository": {
        "type": "git",
        "url": "git://github.com/InseeFrLab/onyxia-ui-code-editor.git"
    },
    "scripts": {
        "prepare": "patch-package",
        "build": "tsx scripts/build/main.ts",
        "_format": "prettier '**/*.{ts,tsx,json,md}'",
        "format": "npm run _format -- --write",
        "format:check": "npm run _format -- --list-different"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "lint-staged": {
        "*.{ts,tsx,json,md}": [
            "prettier --write"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged -v"
        }
    },
    "author": "u/InseeFrLab",
    "license": "MIT",
    "files": [
        "src/",
        "dist/",
        "!dist/tsconfig.tsbuildinfo"
    ],
    "keywords": [],
    "homepage": "https://github.com/InseeFrLab/onyxia-ui-code-editor",
    "peerDependencies": {
        "@mui/system": "^5.0.0",
        "@types/react": "*",
        "onyxia-ui": "^5.4.1",
        "react": "*",
        "react-dom": ">=16.8.0",
        "screen-scaler": "^1.3.2"
    },
    "dependencies": {
        "tss-react": "^4.9.13"
    },
    "peerDependenciesMeta": {
        "screen-scaler": {
            "optional": true
        }
    },
    "devDependencies": {
        "@babel/runtime": "7.25.6",
        "@codemirror/autocomplete": "6.18.1",
        "@codemirror/lang-yaml": "^6.1.1",
        "@codemirror/language": "^6.10.3",
        "@codemirror/legacy-modes": "^6.4.1",
        "@codemirror/lint": "6.8.1",
        "@codemirror/search": "6.5.6",
        "@codemirror/state": "6.4.1",
        "@codemirror/theme-one-dark": "6.1.2",
        "@codemirror/view": "6.34.1",
        "@emotion/react": "^11.13.3",
        "@emotion/styled": "^11.11.0",
        "@lezer/common": "1.2.1",
        "@lezer/highlight": "^1.2.1",
        "@mui/material": "^5.14.6",
        "@mui/system": "5.15.9",
        "@types/node": "^22.8.2",
        "@types/react": "^18.3.3",
        "@uiw/codemirror-themes": "^4.23.6",
        "@uiw/react-codemirror": "^4.23.6",
        "codemirror": "6.0.1",
        "husky": "^4.3.8",
        "lint-staged": "^11.1.1",
        "onyxia-ui": "^5.4.1",
        "prettier": "^3.3.2",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "screen-scaler": "^1.3.2",
        "tsx": "^4.15.5",
        "typescript": "^5.6.3",
        "tss-react": "^4.9.13",
        "webpack": "5.93.0",
        "webpack-cli": "5.1.4",
        "patch-package": "^8.0.0",
        "babel-loader": "9.1.3",
        "@babel/core": "^7.24.5",
        "@babel/preset-env": "7.24.8"
    },
    "resolutions": {
        "@codemirror/view": "6.34.1"
    },
    "publishConfig": {
        "access": "public"
    }
}
